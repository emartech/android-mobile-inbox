<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/ems_headerBackgroundColor</item>
        <item name="colorPrimaryDark">@color/ems_headerBackgroundColor</item>
        <item name="colorAccent">@color/ems_headerForegroundColor</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/ems_headerBackgroundColor</item>
        <item name="titleTextColor">@color/ems_headerForegroundColor</item>
        <item name="iconTint">@color/ems_headerForegroundColor</item>
        <item name="displayOptions">showTitle</item>
    </style>

    <style name="Emarsys.MessageInbox" parent="android:Widget">
        <item name="android:background">@color/ems_bodyBackgroundColor</item>
    </style>

    <style name="Emarsys.MessageInbox.ListItem.PinButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">@color/ems_pin_button_color</item>
    </style>
</resources>